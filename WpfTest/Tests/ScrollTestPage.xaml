<Page x:Class="WpfTest.Tests.ScrollTestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfTest.Tests"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScrollTestPage"
      d:Background="White">

    <ws:ScrollViewer>
        <ws:StackPanel Margin="28 12 28 28"
                       Spacing="8">
            <ws:StackPanel Grid.ColumnSpan="3"
                           Spacing="8"
                           Margin="0 0 0 24">
                <TextBlock Text="Scroll Test"
                           FontSize="26"/>
                <TextBlock TextWrapping="Wrap"
                           Text="The content on the left can be scrolled by dragging with the mouse, and the content on the right can be scrolled by dragging with the pen. And if you use mouse scroll the right panel, operation is reversed." />
            </ws:StackPanel>

            <ws:FlexPanel UniformGrow="1"
                          MainSpacing="8"
                          Height="300">
                <ws:Border Grid.Row="1"
                           Grid.Column="0"
                           BorderBrush="Gray"
                           BorderThickness="1"
                           CornerRadius="3">
                    <ws:ScrollViewer PanningMode="Both"
                                     ws:MouseTouchDevice.Simulate="True"
                                     ScrollingAnimationDuration="0:0:0.5"
                                     MouseScrollDeltaFactor="2"
                                     TouchpadScrollDeltaFactor="3"
                                     Padding="14"
                                     Clip="{Binding RelativeSource={RelativeSource AncestorType=ws:Border},Path=ContentClip}">
                        <ws:StackPanel Spacing="8">
                            <ws:Button Content="Test1" Click="Button_Click"/>
                            <ws:Button Content="Test2" Click="Button_Click"/>
                            <ws:Button Content="Test3" Click="Button_Click"/>
                            <ws:Button Content="Test4" Click="Button_Click"/>
                            <ws:Button Content="Test5" Click="Button_Click"/>
                            <ws:Button Content="Test6" Click="Button_Click"/>
