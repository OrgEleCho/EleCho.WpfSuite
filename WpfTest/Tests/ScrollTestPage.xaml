            </Border>

            <Border Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Margin="0 8 0 0"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    CornerRadius="4"
                    Padding="4"
                    Width="200"
                    Height="200">
                <ws:ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto">
                    <TextBlock Width="300"
                               Height="300"  
                               TextWrapping="Wrap"
                               ScrollViewer.HorizontalScrollBarVisibility="Auto"
                               ScrollViewer.VerticalScrollBarVisibility="Auto"
                               Text="Mia iri per helpo ke povis mia liberulo povus tero velojn velojn gxin kiam savi de virojn ke ni por trovis sentadis venos terbordon gxi ke al ili al mia la ili farmilaro iris ne marbordo sxnuregon ni mi nun li dum iris ili boaton mi li decidi ke egalan"/>
