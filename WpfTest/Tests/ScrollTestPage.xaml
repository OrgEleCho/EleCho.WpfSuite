                            <ws:Button Content="Test10" Click="Button_Click"/>
                            <ws:Button Content="Test11" Click="Button_Click"/>
                            <ws:Button Content="Test12" Click="Button_Click"/>
                            <ws:Button Content="Test13" Click="Button_Click"/>
                            <ws:Button Content="Test14" Click="Button_Click"/>
                            <ws:Button Content="Test15" Click="Button_Click"/>
                            <ws:Button Content="Test16" Click="Button_Click"/>
                            <ws:Button Content="Test17" Click="Button_Click"/>
                            <ws:Button Content="Test18" Click="Button_Click"/>
                            <ws:Button Content="Test19" Click="Button_Click"/>
                            <ws:Button Content="Test20" Click="Button_Click"/>
                            <ws:Button Content="Test21" Click="Button_Click"/>
                            <ws:Button Content="Test22" Click="Button_Click"/>
                            <ws:Button Content="Test23" Click="Button_Click"/>
                            <ws:Button Content="Test24" Click="Button_Click"/>
                            <ws:Button Content="Test25" Click="Button_Click"/>
                            <ws:Button Content="Test26" Click="Button_Click"/>
                            <ws:Button Content="Test27" Click="Button_Click"/>
                            <ws:Button Content="Test28" Click="Button_Click"/>
                            <ws:Button Content="Test29" Click="Button_Click"/>
                            <ws:Button Content="Test30" Click="Button_Click"/>
                        </ws:StackPanel>
                    </ws:ScrollViewer>
                </ws:Border>

                <ws:Border Grid.Row="1"
                           Grid.Column="2"
                           BorderBrush="Gray"
                           BorderThickness="1"
                           CornerRadius="3">
                    <ws:ScrollViewer ws:StylusTouchDevice.Simulate="True"
                                     PanningMode="Both"
                                     Padding="14"
                                     MouseScrollDeltaFactor="-1"
                                     Clip="{Binding RelativeSource={RelativeSource AncestorType=ws:Border},Path=ContentClip}">
                        <ws:StackPanel Spacing="8">
                            <ws:Button Content="Test1" Click="Button_Click"/>
                            <ws:Button Content="Test2" Click="Button_Click"/>
                            <ws:Button Content="Test3" Click="Button_Click"/>
                            <ws:Button Content="Test4" Click="Button_Click"/>
                            <ws:Button Content="Test5" Click="Button_Click"/>
                            <ws:Button Content="Test6" Click="Button_Click"/>
                            <ws:Button Content="Test7" Click="Button_Click"/>
                            <ws:Button Content="Test8" Click="Button_Click"/>
                            <ws:Button Content="Test9" Click="Button_Click"/>
                            <ws:Button Content="Test10" Click="Button_Click"/>
                            <ws:Button Content="Test11" Click="Button_Click"/>
                            <ws:Button Content="Test12" Click="Button_Click"/>
                            <ws:Button Content="Test13" Click="Button_Click"/>
                            <ws:Button Content="Test14" Click="Button_Click"/>
                            <ws:Button Content="Test15" Click="Button_Click"/>
                            <ws:Button Content="Test16" Click="Button_Click"/>
                            <ws:Button Content="Test17" Click="Button_Click"/>
