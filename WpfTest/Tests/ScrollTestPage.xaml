                            <ws:Button Content="Test24" Click="Button_Click"/>
                            <ws:Button Content="Test25" Click="Button_Click"/>
                            <ws:Button Content="Test26" Click="Button_Click"/>
                            <ws:Button Content="Test27" Click="Button_Click"/>
                            <ws:Button Content="Test28" Click="Button_Click"/>
                            <ws:Button Content="Test29" Click="Button_Click"/>
                            <ws:Button Content="Test30" Click="Button_Click"/>
                        </ws:StackPanel>
                    </ws:ScrollViewer>
                </ws:Border>
            </ws:FlexPanel>

            <Border Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Margin="0 8 0 0"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    CornerRadius="4"
                    Padding="4">
                <ws:ScrollViewer VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto">
                    <TextBlock Text="Mia iri per helpo ke povis mia liberulo povus tero velojn velojn gxin kiam savi de virojn ke ni por trovis sentadis venos terbordon gxi ke al ili al mia la ili farmilaro iris ne marbordo sxnuregon ni mi nun li dum iris ili boaton mi li decidi ke egalan"/>
