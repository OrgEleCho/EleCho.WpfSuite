<Window x:Class="AnimatedBindingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ws="https://schemas.elecho.dev/wpfsuite"
        xmlns:local="clr-namespace:AnimatedBindingTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}">
    <Grid>
        <StackPanel Margin="24">
            <TextBlock Text="AnimatedBinding Test"
                       FontSize="24"/>
            <Slider Minimum="0" Maximum="100"
                    Value="{Binding SomeValue.Value,Mode=OneWayToSource}"
                    Margin="0 24 0 0"/>
            <ProgressBar Minimum="0" Maximum="100"
                         Value="{Binding SomeValue.AnimatedValue,Mode=OneWay}"
                         Height="20"
                         Margin="0 8 0 0"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Target: "/>
                <TextBlock Text="{Binding SomeValue.Value}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Animated: "/>
                <TextBlock Text="{Binding SomeValue.AnimatedValue,Mode=OneWay}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
