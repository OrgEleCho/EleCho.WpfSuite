<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:StateMachineControlTest.Controls"
    xmlns:wssm="clr-namespace:EleCho.WpfSuite.Controls.StateMachines;assembly=EleCho.WpfSuite.Controls">


    <Style TargetType="{x:Type local:TestControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TestControl}">
                    <Border x:Name="root"
                            Background="Red"
                            BorderThickness="3">
                        <wssm:StateMachine.States>
                            <wssm:StateCollection>
                                <wssm:State x:Name="qaq"
                                            Background="{Binding}"
                                            Foreground="{TemplateBinding Foreground}"
                                            UniformTransitionDuration="0:0:0.300"/>
                                <wssm:State Name="Hover"
                                            Background="Green"
                                            Foreground="Black"
                                            CornerRadius="12"
                                            UniformTransitionDuration="0:0:0.300"/>
                            </wssm:StateCollection>
                        </wssm:StateMachine.States>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="root" Property="wssm:StateMachine.ActiveState" Value="Hover"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
