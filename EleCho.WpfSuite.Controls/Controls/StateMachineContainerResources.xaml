<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EleCho.WpfSuite.Controls"
                    xmlns:sm="clr-namespace:EleCho.WpfSuite.Controls.StateMachines"
                    xmlns:smm="clr-namespace:EleCho.WpfSuite.Controls.StateMachines.Markup">

    <Style TargetType="{x:Type local:StateMachineContainer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:StateMachineContainer}">
                    <Border Background="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Presentation.Background}"
                            TextElement.Foreground="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Presentation.Foreground}"
                            BorderBrush="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Presentation.BorderBrush}"
                            Padding="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Presentation.Padding}"
                            BorderThickness="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Presentation.BorderThickness}"
                            CornerRadius="{Binding RelativeSource={RelativeSource Mode=TemplatedParent},Path=Presentation.CornerRadius}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                          ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>